<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="340dp"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="80dp"
    app:layout_behavior="se.simonekdahl.mymaps.bottomsheet.HiddenBottomSheetBehavior">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#7A378828"
        android:orientation="vertical">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/marker_title"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:autofillHints="Marker title"
                android:hint="Marker title"
                android:layout_weight="1"
                android:inputType="text" />

        </TableRow>

        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:text="Latitude: " android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/marker_lat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="content"
                android:textColor="@android:color/black" />
        </TableRow>

        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:text="Longitude: " android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/marker_long"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="content"
                android:textColor="@android:color/black" />
        </TableRow>


    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        >



        <Button
            android:id="@+id/save_marker_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/save_image"
            />

    </LinearLayout>



</LinearLayout>